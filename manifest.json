{
  "manifest_version": 3,
  "name": "CDN Detector",
  "version": "2.1",
  "description": "抓取當前網站的 HTTP Response Header、TLS 證書 Issuer、Remote IP，並判斷是否使用 CDN，提供詳細的快取效能分析。",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "tabs",
    "management"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.twitch.tv/*",
        "*://*.vimeo.com/*",
        "*://*.dailymotion.com/*",
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.bilibili.com/*",
        "*://*.youku.com/*",
        "*://*.iqiyi.com/*",
        "*://*.v.qq.com/*",
        "*://*.hulu.com/*",
        "*://*.amazon.com/gp/video/*",
        "*://*.primevideo.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hbomax.com/*",
        "*://*.peacocktv.com/*",
        "*://*.paramountplus.com/*",
        "*://*.gagaoolala.com/*",
        "*://*.coursera.org/*",
        "*://*.udemy.com/*",
        "*://*.khanacademy.org/*",
        "*://*.edx.org/*",
        "*://*.linkedin.com/learning/*",
        "*://*.skillshare.com/*",
        "*://*.masterclass.com/*",
        "*://*.pluralsight.com/*",
        "*://localhost/*",
        "*://127.0.0.1/*",
        "file:///*"
      ],
      "js": ["video-quality-monitor.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["debug-video.html", "internal-test.html", "internal-test.js", "test-video-simple.html", "test-video-simple.js", "test-streaming-platforms.html", "test-streaming-platforms.js", "test-content-script.html", "test-content-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "file://*/*",
      "http://localhost/*",
      "https://localhost/*",
      "http://localhost:*/*",
      "https://localhost:*/*",
      "http://127.0.0.1/*",
      "https://127.0.0.1/*",
      "http://127.0.0.1:*/*",
      "https://127.0.0.1:*/*",
      "http://*.local/*",
      "https://*.local/*"
    ]
  }
} 