{
  "manifest_version": 3,
  "name": "CDN Detector",
  "version": "2.4.0",
  "description": "抓取當前網站的 HTTP Response Header、TLS 證書 Issuer、Remote IP，並判斷是否使用 CDN，提供詳細的快取效能分析與影片播放品質監控。",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "96": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.twitch.tv/*",
        "*://*.vimeo.com/*",
        "*://*.dailymotion.com/*",
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.bilibili.com/*",
        "*://*.youku.com/*",
        "*://*.iqiyi.com/*",
        "*://*.v.qq.com/*",
        "*://*.hulu.com/*",
        "*://*.amazon.com/gp/video/*",
        "*://*.primevideo.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hbomax.com/*",
        "*://*.peacocktv.com/*",
        "*://*.paramountplus.com/*",
        "*://*.gagaoolala.com/*",
        "*://*.coursera.org/*",
        "*://*.udemy.com/*",
        "*://*.khanacademy.org/*",
        "*://*.edx.org/*",
        "*://*.linkedin.com/learning/*",
        "*://*.skillshare.com/*",
        "*://*.masterclass.com/*",
        "*://*.pluralsight.com/*",
        "*://localhost/*",
        "*://127.0.0.1/*",
        "file:///*",
        "*://*.cloud.edu.tw/*",
        "*://*.video.cloud.edu.tw/*",
        "*://*.edu.tw/*"
      ],
      "js": ["video-quality-monitor.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/core/security-manager.js",
        "src/detectors/security/SecurityDetectionModule.js",
        "src/detectors/security/CSPDetector.js",
        "src/detectors/security/FrameProtectionDetector.js",
        "src/detectors/security/ContentTypeDetector.js",
        "src/detectors/security/HSTSDetector.js",
        "src/detectors/security/ReferrerPolicyDetector.js",
        "popup.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "file://*/*",
      "http://localhost/*",
      "https://localhost/*",
      "http://localhost:*/*",
      "https://localhost:*/*",
      "http://127.0.0.1/*",
      "https://127.0.0.1/*",
      "http://127.0.0.1:*/*",
      "https://127.0.0.1:*/*",
      "http://*.local/*",
      "https://*.local/*"
    ]
  }
} 